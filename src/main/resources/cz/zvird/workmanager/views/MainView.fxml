<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<StackPane fx:id="stackPane" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.zvird.workmanager.controllers.MainController">
    <BorderPane>
        <top>
            <MenuBar BorderPane.alignment="CENTER">
                <Menu mnemonicParsing="false" text="Soubor">
                    <MenuItem fx:id="newFileMenu" mnemonicParsing="false" text="Nový">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                    <MenuItem fx:id="openFileMenu" mnemonicParsing="false" text="Otevřít...">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                    <MenuItem fx:id="saveFileMenu" mnemonicParsing="false" text="Uložit soubor">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                    <MenuItem fx:id="saveAsFileMenu" mnemonicParsing="false" text="Uložit jako...">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                </Menu>
                <Menu fx:id="exportMenu" mnemonicParsing="false" text="Export">
                    <MenuItem mnemonicParsing="false" text="XLSX Tabulka">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                </Menu>
                <Menu mnemonicParsing="false" text="Ostatní">
                    <MenuItem fx:id="aboutMenu" mnemonicParsing="false" text="Autor..." />
                </Menu>
            </MenuBar>
        </top>
        <center>
            <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                <Tab closable="false" text="Leden">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Únor">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Březen">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Duben">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Květen">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Červen">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Červenec">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Srpen">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Září">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Říjen">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Listopad">
                    <fx:include source="TableView.fxml" />
                </Tab>
                <Tab closable="false" text="Prosinec">
                    <fx:include source="TableView.fxml" />
                </Tab>
            </TabPane>
        </center>
        <bottom>
            <ButtonBar buttonMinWidth="50.0" maxHeight="40.0" minHeight="40.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                <buttons>
               <Label maxWidth="100.0" minWidth="100.0" prefHeight="20.0" text="Hodinový plat:" ButtonBar.buttonData="LEFT">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Label>
                    <TextField fx:id="hourlyWageField" prefWidth="50.0" promptText="bez měny" ButtonBar.buttonData="LEFT" />
                    <Button fx:id="newRowButton" maxWidth="100.0" mnemonicParsing="false" prefWidth="100.0" text="Nový řádek" ButtonBar.buttonData="RIGHT" />
                    <Button fx:id="deleteButton" maxWidth="100.0" mnemonicParsing="false" prefWidth="100.0" text="Odstranit" ButtonBar.buttonData="RIGHT" />
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Suma celkem" ButtonBar.buttonData="LEFT" />
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Celkem hodin" ButtonBar.buttonData="LEFT" />
                </buttons>
            <BorderPane.margin>
               <Insets />
            </BorderPane.margin>
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding>
            </ButtonBar>
        </bottom>
    </BorderPane>
</StackPane>
