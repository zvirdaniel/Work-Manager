<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane prefHeight="600.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.duno.workmanager.Controllers.MonthController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <TableView fx:id="table">
                <columns>
                    <TableColumn fx:id="date" minWidth="90.0" maxWidth="110.0" text="Datum"/>
                    <TableColumn fx:id="time" minWidth="90.0" maxWidth="110.0" text="Začátek práce"/>
                    <TableColumn fx:id="duration" minWidth="90.0" maxWidth="110.0" text="Celkový čas"/>
                    <TableColumn fx:id="description" prefWidth="100.0" text="Popis práce"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </center>
        <right>
            <ScrollBar orientation="VERTICAL" BorderPane.alignment="CENTER"/>
        </right>
    </BorderPane>
</AnchorPane>
