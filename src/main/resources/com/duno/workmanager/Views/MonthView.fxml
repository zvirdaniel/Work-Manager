<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="600.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.duno.workmanager.Controllers.MonthController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <TableView fx:id="table" fixedCellSize="1.0" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn editable="false" maxWidth="140.0" minWidth="140.0" resizable="false" text="Datum">
                        <cellValueFactory>
                            <PropertyValueFactory property="beginDate"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" maxWidth="120.0" minWidth="120.0" resizable="false" text="Začátek práce">
                        <cellValueFactory>
                            <PropertyValueFactory property="beginTime"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" maxWidth="120.0" minWidth="120.0" resizable="false" text="Hodiny">
                        <cellValueFactory>
                            <PropertyValueFactory property="hoursWorked"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" maxWidth="-Infinity" minWidth="800.0" sortable="false" text="Popis práce">
                        <cellValueFactory>
                            <PropertyValueFactory property="description"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </center>
        <right>
            <ScrollBar orientation="VERTICAL" BorderPane.alignment="CENTER"/>
        </right>
    </BorderPane>
</AnchorPane>
